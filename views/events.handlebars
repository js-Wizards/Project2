<div class="uk-container-large">
    <nav class="uk-navbar-container" uk-navbar>
        <span class="uk-form-icon" uk-icon="icon: heart"></span>
        <div class="uk-navbar-left">
            <ul class="uk-navbar-nav">
                <li>
                    <a href="#"></a>
                    <div class="uk-navbar-dropdown">
                        <ul class="uk-nav uk-navbar-dropdown-nav">
                            <li class="uk-active"><a href="#">
                                    <p>Welcome <span class="member-name"></span></p>
                                </a></li>
                            <li><a href="#">Item</a></li>
                            {{!-- <li class="uk-nav-header">Header</li> --}}
                            {{!-- <li><a href="#">Item</a></li>
                            <li><a href="#">Item</a></li> --}}
                            <li class="uk-nav-divider"></li>
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <div uk-grid>
        <div id="public-events" class="uk-width-2-3 uk-box-shadow-small uk-padding uk-clearfix">
            <h3 class="uk-card-title uk-text-center">Events In Your Area</h3>
            <ul>
                {{#each eventsDB}}
                <div id="event-card" class="uk-card uk-card-default uk-width-1-2@m uk-align-center">

                    <div class="uk-card-header">
                        <div class="uk-grid-small uk-flex-middle">
                            <div class="uk-width-expand">
                                <h3 class="uk-card-title uk-margin-remove-bottom">{{eventName}}</h3>
                                <p class="uk-text-meta uk-margin-remove-top"></p>
                            </div>
                        </div>
                    </div>
                    <div class="uk-card-body">
                        <p>{{startDate}} {{startTime}}</p>
                        <p>{{venueName}} {{addressLine1}} {{addressLine2}} {{city}} {{state}}
                            {{postalCode}}</p>
                    </div>
                    <div class="uk-card-footer">
                        <a data-eventID="{{eventId}}" class="uk-button uk-button-text add_to_my_events">Add To My events</a>
                        {{!-- eventsDB: dbEvent, myEvents: mySavedEvents }) --}}
                    </div>
                </div>
                {{/each}}
            </ul>
        </div>

        <div id="my-events" class="uk-width-1-3 uk-box-shadow-small uk-padding uk-clearfix">
            <h3 class="uk-card-title uk-text-center">My Events</h3>
            <div class="uk-card uk-card-default uk-card-body">
                <ul>
                    {{#each myEvents}}
                    <li>{{eventName}} {{venueName}}</li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>