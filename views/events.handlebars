<div class="uk-container uk-container-large">

    <div uk-grid>
        <div id="public-events" class="uk-width-2-3 uk-padding uk-clearfix">
            <h3 class="uk-text-center">Events In Your Area</h3>
            <div class="uk-grid-match" uk-grid>
                {{#each eventsDB}}
                <div class="uk-width-1-2">
                    <div class="uk-card uk-card-default event-card" data-eventID="{{eventID}}">
                        <div class="uk-card-header">
                            <div class="uk-grid-small uk-flex-middle">
                                <div class="uk-width-expand">
                                    <h3 class="uk-card-title uk-margin-remove-bottom">{{eventName}}</h3>
                                    <p class="uk-text-meta uk-margin-remove-top"></p>
                                </div>
                            </div>
                        </div>
                        <div class="uk-card-body">
                            <p>{{eventName}}</p>
                            <p>{{startDate}} {{startTime}}</p>
                            <p>{{venueName}} {{addressLine1}} {{addressLine2}} {{city}} {{state}}
                                {{postalCode}}</p>
                        </div>
                        <div class="uk-card-footer">
                            <a data-eventID="{{eventId}}" class="uk-button uk-button-text add_to_my_events">Add To My
                                events</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

        <div id="my-events" class="uk-width-1-3 uk-padding uk-clearfix">
            <h3 class="uk-text-center">My Events</h3>
            <div class="uk-grid-match" uk-grid>
                {{#each myEvents}}
                <div id="event-card" class="uk-card uk-card-default event-card">

                    <div class="uk-card-header">
                        <div class="uk-grid-small uk-flex-middle">
                            <div class="uk-width-expand">
                                <h3 class="uk-card-title uk-margin-remove-bottom">{{eventName}}</h3>
                                <p class="uk-text-meta uk-margin-remove-top"></p>
                            </div>
                        </div>
                    </div>
                    <div class="uk-card-body">
                        <p>{{eventName}}</p>
                        <p>{{startDate}} {{startTime}}</p>
                        <p>{{venueName}} {{addressLine1}} {{addressLine2}} {{city}} {{state}}
                            {{postalCode}}</p>
                    </div>
                    <div class="uk-card-footer">
                        <a data-eventID="{{eventId}}" class="uk-button uk-button-text add_to_my_events"></a>
                        {{!-- eventsDB: dbEvent, myEvents: mySavedEvents }) --}}
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>